<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.rahul.telly.MyFavourites">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.synnapps.carouselview.CarouselView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/favcarousel"
                app:slideInterval="3000"
                app:radius="5dp"></com.synnapps.carouselview.CarouselView>

            <!--////////////////////Favorite Movies Design/////////////////////-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Favourite Movies"
                android:layout_marginTop="18dp"
                android:textStyle="bold"
                android:textColor="#3F51B5"
                android:id="@+id/tv1"
                android:textSize="20sp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="#3F51B5"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dynamicFavoriteLinearlayout"
                    android:orientation="horizontal">

                </LinearLayout>

            </HorizontalScrollView>
            <!--/////////////////////////////////////////////////////////////////////// -->



        </LinearLayout>



    </ScrollView>
